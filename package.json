{
  "name": "claimguardian-platform",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "build:clean": "./scripts/build-clean.sh",
    "build:pretty": "node scripts/build-pretty.js",
    "dev": "turbo dev",
    "dev:co-strategist": "node ./scripts/ai/co-strategist.js",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=test-results.xml",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "deps:check": "node scripts/utils/validate-lockfile.js",
    "deps:update": "pnpm update -r",
    "deps:clean": "rm -rf node_modules **/node_modules pnpm-lock.yaml && pnpm install",
    "db:seed-legal": "tsx scripts/fix-legal-documents.ts",
    "prepare": "husky",
    "lint:fix": "turbo lint:fix",
    "lint:fix:all": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "lint:report": "eslint . --format html -o lint-report.html || true",
    "lint:list": "eslint . || true",
    "lint:staged": "lint-staged",
    "fix:auto": "./scripts/lint-fix.sh",
    "lint:smart-fix": "node scripts/fix-eslint-errors.cjs",
    "pre-commit:test": "bash .husky/pre-commit",
    "lockfile:check": "node scripts/sync-lockfile.js --check",
    "lockfile:sync": "node scripts/sync-lockfile.js --fix",
    "lockfile:fix": "pnpm install --no-frozen-lockfile",
    "legal:version": "node scripts/legal/version-docs.mjs",
    "db:generate-types": "cd apps/web && pnpm db:types",
    "db:generate-types:local": "cd apps/web && pnpm db:types:local",
    "db:sync": "cd apps/web && pnpm db:types && git add packages/db/src/types/database.types.ts && git commit -m 'chore(db): Update generated types' || echo 'No type changes'",
    "clean:deps": "pnpm install --frozen-lockfile",
    "clean:lint": "pnpm lint:fix:all",
    "clean:types": "pnpm db:generate-types && pnpm type-check",
    "clean:build": "pnpm build",
    "clean:all": "pnpm clean:deps && pnpm clean:lint && pnpm clean:types && pnpm clean:build",
    "clean:quick": "pnpm lint:fix && pnpm build",
    "ci:local": "pnpm install --frozen-lockfile && pnpm lint && pnpm type-check && pnpm test && pnpm build",
    "ci:validate": "pnpm deps:check && pnpm lint && pnpm type-check && pnpm test:ci",
    "fix:all": "pnpm lint:smart-fix && pnpm db:generate-types && pnpm build",
    "health:check": "pnpm lint:list | grep -E '(error|warning)' | wc -l && echo 'lint issues' && pnpm type-check 2>&1 | grep error | wc -l && echo 'type errors'",
    "claude:learning-mode": "node scripts/claude/learning-mode.js",
    "claude:demo": "node scripts/claude/run-demo.js",
    "claude:advanced-demo": "node scripts/claude/advanced-automation-demo.js",
    "claude:stats": "node scripts/claude/show-stats.js",
    "claude:dashboard": "echo 'ðŸš€ Opening Claude Learning Dashboard...' && open 'https://claimguardianai.com/admin?tab=claude-learning' || echo 'Visit: https://claimguardianai.com/admin?tab=claude-learning'",
    "claude:test-system": "node scripts/claude/test-learning-system-es.js",
    "claude:export": "node scripts/claude/export-learnings-es.js",
    "claude:monitor": "node scripts/claude/monitor-production-es.js",
    "claude:prepare-llm": "node scripts/claude/prepare-llm-integration.js",
    "claude:enable-llm": "node scripts/claude/enable-llm-features.js",
    "claude:demo-llm": "node scripts/claude/demo-llm-ready.js",
    "metadata:audit": "node scripts/metadata-audit.js",
    "metadata:generate": "node scripts/metadata-generate.js",
    "metadata:validate": "node scripts/metadata-validate.js",
    "metadata:sync-deps": "node scripts/metadata-sync-deps.js",
    "metadata:report": "node scripts/metadata-report.js",
    "metadata:fix": "node scripts/metadata-fix.js"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.4.6",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@turbo/gen": "^2.5.5",
    "@types/node": "^24.2.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "msw": "^2.10.4",
    "prettier": "^3.6.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.39.0",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "@types/ioredis": "^5.0.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.1",
    "ioredis": "^5.7.0"
  },
  "resolutions": {
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@sentry/cli",
      "esbuild",
      "sharp"
    ],
    "overrides": {
      "@types/react": "19.1.9",
      "@types/react-dom": "19.1.7",
      "zod": "3.23.8",
      "node-plop": "0.32.0",
      "del": "8.0.0",
      "rimraf": "6.0.1",
      "glob": "11.0.3",
      "lodash.get": "npm:lodash@4.17.21",
      "source-map": "0.7.4"
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "core-js-pure",
      "msw",
      "unrs-resolver"
    ]
  }
}
