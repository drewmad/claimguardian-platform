{
  "name": "mad-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "ci:reinstall": "rimraf node_modules **/node_modules **/.next **/dist **/.turbo **/tsconfig.tsbuildinfo && pnpm -w install",
    "clean": "rimraf **/node_modules **/.next **/dist **/.turbo **/tsconfig.tsbuildinfo",
    "deps:check": "pnpm audit --audit-level=moderate",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck --filter=...#^", 
    "build": "turbo run build",
    "build:pkgs": "turbo run build --filter=./packages/*",
    "build:web": "turbo run build --filter=web",
    "test": "turbo run test -- --run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "storybook": "turbo run storybook --filter=@claimguardian/ui",
    "storybook:build": "turbo run storybook:build --filter=@claimguardian/ui",
    "fix:imports": "tsx ./scripts/fix-internal-imports.ts",
    "db:migrate:local": "supabase migration up",
    "db:types:local": "supabase gen types typescript --local > packages/db/src/generated.supabase.ts",
    "precommit": "pnpm -w run lint && pnpm -w run typecheck",
    "install:playwright": "playwright install",
    "db:guard": "bash scripts/guard-privileges.sh",
    "db:fix": "bash scripts/apply-database-fixes.sh"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.4.6",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@turbo/gen": "^2.5.5",
    "@types/jest": "^30.0.0",
    "@types/mapbox-gl": "^3.4.1",
    "@types/node": "^24.2.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "msw": "^2.10.4",
    "prettier": "^3.6.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "rimraf": "^5.0.5",
    "ts-prune": "^0.10.3",
    "tsx": "^4.7.0",
    "turbo": "^2.5.5",
    "type-coverage": "^2.29.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.39.0",
    "vitest": "^3.2.4",
    "@playwright/test": "^1.49.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.1",
    "ioredis": "^5.7.0",
    "pg": "^8.16.3",
    "zod": "3.23.8"
  },
  "resolutions": {
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@sentry/cli",
      "esbuild",
      "sharp"
    ],
    "overrides": {
      "@types/react": "19.1.9",
      "@types/react-dom": "19.1.7",
      "zod": "3.23.8",
      "node-plop": "0.32.0",
      "del": "8.0.0",
      "rimraf": "6.0.1",
      "glob": "11.0.3",
      "lodash.get": "npm:lodash@4.17.21",
      "source-map": "0.7.4",
      "esbuild": "^0.25.0"
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "core-js-pure",
      "msw",
      "unrs-resolver"
    ]
  }
}
