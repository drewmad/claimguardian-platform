{
  "name": "@claimguardian/security",
  "version": "1.0.0",
  "description": "ClaimGuardian security utilities and environment validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./env-validator": {
      "types": "./dist/env-validator.d.ts", 
      "default": "./dist/env-validator.js"
    },
    "./encryption": {
      "types": "./dist/encryption.d.ts",
      "default": "./dist/encryption.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/env-validator.ts src/encryption.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/env-validator.ts src/encryption.ts --format cjs,esm --dts --watch",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "^0.7.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "files": [
    "dist/**",
    "README.md"
  ]
}