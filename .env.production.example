# Production Environment Variables for ClaimGuardian
# Copy this file to .env.production and fill in the values

# Site URL - CRITICAL for authentication callbacks
NEXT_PUBLIC_SITE_URL=https://claimguardianai.com

# Supabase Configuration - REQUIRED
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI API Keys (Optional)
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key

# Debug Mode (Set to 'true' to enable auth debugging in production)
NEXT_PUBLIC_DEBUG_AUTH=false

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_id