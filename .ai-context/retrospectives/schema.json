{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "retrospectives": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "agent", "task", "duration", "outcome"],
        "properties": {
          "timestamp": {"type": "string", "format": "date-time"},
          "agent": {"type": "string"},
          "task": {"type": "string"},
          "duration": {"type": "number"},
          "outcome": {"enum": ["success", "partial", "failure"]},
          "errors": {"type": "array", "items": {"type": "string"}},
          "warnings": {"type": "array", "items": {"type": "string"}},
          "learnings": {"type": "array", "items": {"type": "string"}},
          "suggestions": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "misses": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "agent", "miss_type", "context"],
        "properties": {
          "timestamp": {"type": "string", "format": "date-time"},
          "agent": {"type": "string"},
          "miss_type": {
            "type": "string",
            "description": "The type of information that was missing, e.g., 'metadata_tag', 'documentation', 'schema_definition'."
          },
          "context": {
            "type": "object",
            "properties": {
              "file": {"type": "string"},
              "component": {"type": "string"},
              "description": {"type": "string"}
            }
          },
          "proposed_solution": {
            "type": "string",
            "description": "A concrete proposal for how to remedy this miss in the future."
          }
        }
      }
    }
  },
  "required": ["retrospectives", "misses"]
}
