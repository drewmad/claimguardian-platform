# ClaimGuardian Production Environment Variables
# Copy this file to .env and fill in actual values

# Application Configuration
NODE_ENV=production
VERSION=latest
NEXT_PUBLIC_SITE_URL=https://claimguardianai.com

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_PASSWORD=your-db-password

# AI API Keys
OPENAI_API_KEY=sk-your-openai-key
GEMINI_API_KEY=your-gemini-key

# Email Service (Resend)
RESEND_API_KEY=re_your-resend-key

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Redis Configuration
REDIS_PASSWORD=your-redis-password

# SSL Configuration
ACME_EMAIL=ssl@claimguardianai.com

# Traefik Authentication (basic auth hash)
TRAEFIK_AUTH=admin:$2y$10$your-bcrypt-hash

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-password

# Email Alerts Configuration
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USERNAME=resend
SMTP_PASSWORD=re_your-resend-key

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord Integration (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Database Backup Configuration
BACKUP_S3_BUCKET=claimguardian-backups
BACKUP_S3_REGION=us-east-1
BACKUP_AWS_ACCESS_KEY_ID=your-aws-access-key
BACKUP_AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Google Maps API (for address validation)
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Mapbox (for property visualization)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token
