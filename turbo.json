{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**", 
        "!.next/cache/**", 
        "dist/**",
        ".next/standalone/**",
        ".next/static/**",
        "public/**"
      ],
      "env": [
        "NODE_ENV", 
        "NEXT_PUBLIC_*", 
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "docs:build": {
      "outputs": ["docs/.next/**"],
      "inputs": ["docs/**/*.md", "docs/**/*.mdx"]
    },
    "docs:validate": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  },
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "globalEnv": ["NODE_ENV", "CI", "VERCEL", "VERCEL_ENV"]
}