  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "ClaimGuardian Dashboard"
    },
    {
      "src": "/screenshots/mobile-dashboard.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Dashboard"
    }
  ],
  "shortcuts": [
    {
      "name": "Add Property",
      "short_name": "Add Property",
      "description": "Add a new property to your portfolio",
      "url": "/dashboard/properties/add",
      "icons": [
        {
          "src": "/icons/shortcut-add-property.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "AI Tools",
      "short_name": "AI Tools",
      "description": "Access AI-powered property tools",
      "url": "/dashboard/ai-tools",
      "icons": [
        {
          "src": "/icons/shortcut-ai-tools.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Damage Analyzer",
      "short_name": "Damage Analyzer",
      "description": "Analyze property damage with AI",
      "url": "/dashboard/ai-tools/damage-analyzer",
      "icons": [
        {
          "src": "/icons/shortcut-damage-analyzer.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/dashboard/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/jpeg", "image/png", "image/webp"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+claimguardian",
      "url": "/dashboard/deep-link?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/dashboard/files",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}